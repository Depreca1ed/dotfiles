(defwindow bar
  :monitor 0
  :geometry (geometry :x "0%"
    :y "0%"
    :width "100%"
    :height "3.5%"
  :anchor "bottom center")
  :stacking "bg"
  :reserve (struts :distance "3.5%" :side "bottom")
  :windowtype "dock"
  :exclusive true
  (bar)
)

(defwidget bar []
  (box
    :class "bar"
    :width "5%"
    :orientation "h"
    :halign "end"
    (
      systray
      :space-evenly false
      :spacing 4
    )
  )
)